package day_30;
import java.util.Scanner;
public class Day_30 {
 public static void main(String[] args) {
     //switch-case
     int warna = 1;
     switch (warna){
         case 1:
             System.out.println("Hitam");
             break;
         case 2:
             System.out.println("Biru");
             break;
         case 3:
                System.out.println("Merah");
                break;
         case 4:
             System.out.println("Hijau");
             break;
         case 5:
             System.out.println("Putih");
             break;
         default:
     }
       
    }
    
}
